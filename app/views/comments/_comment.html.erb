<div class="comment clearfix">
    <div class="comment_content">
      <p class="comment_name"><strong><%= comment.name %></strong></p>
      <p class="comment_body"<%= comment.body %>></p>
      <p class="comment_time"><%= time_ago_in_words(comment.created_at) %> Ago</p>
    </div>
  <% if user_signed_in? %>
    <p> <%= link_to 'Destroy', [comment.post, comment], method: :delete, class: "button", data: {confirm: 'Are you Sure'} %></p>
    <p> <%= link_to 'Update', edit_post_comment_path(@post, comment ), class: "button" %></p>
  <% end  %>

    <p> <%= link_to 'Back', post_path, class: "button" %></p>
</div>



